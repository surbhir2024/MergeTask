                                    <input type="text" name="city" placeholder="City" tabindex="6">
                                    <label for="lname" class="searchmore_item_view">State:</label>
                                    <input type="text" name="state" placeholder="State" tabindex="7">
                                    <label for="lname" class="searchmore_item_view">Date of birth:</label>
                                    <input type="text" name="dob" placeholder="Date of birth" tabindex="8">
                                    <input type="submit" name="SearchMore" value="Search" class="button" tabindex="9">
                                </form>
                              
                            </div>
                           
                        
                        
                
        
        
    <%if(data != false){%>
        <table id="customers">
            <tr>
               <%for(let i=0;i<fileds.length;i++){%>
                    <th><%= fileds[i].name%></th>
                <%}%>
            </tr>
            <%for(let i=0;i<data.length;i++){%>
                <tr>
                    <% for(let j=0;j<fileds.length;j++){%>
                        <td><%=data[i][fileds[j].name]%></td>
                    <%}%>
                </tr>
            <%}%>
        </table>
    <%}else{%>
        <center>
            <img src="/images/abc.png" alt="">
            <p style="color: red; font-weight: bolder; font-size:x-large;">Data Not Founds!!!</p> 
        </center>
        
    <%} %>

   
</section>
            <%if(data.length >19){%>
                <div class="container">
                    <div class="row">
                        <a href="task9/search?page=1"><<</a>
                        <% if(crr_page == 1){ %>
                           <a href="task9/search?page=<%= crr_page - 1%>" class="disable"><</a>
                           <% } else { %>
                               <a href="task9/search?page=<%= crr_page - 1%>"><</a>
                                <% } %>
           
           
                                 <a href="task9/search?page=<%= crr_page%>"><div class="pagenumber"><%= crr_page%></div></a>
                                 
           
                            <% if(crr_page == last_page){ %>
                                <!-- <a href="/component?page=<%= crr_page+1%>"><div class="pagenumber" style="display: none;"><%= crr_page +1%></div></a>
