                                 <a href="task9/search?page=<%= crr_page + 1%>" class="disable">></a>
                                
                                <% } else { %>
                                    <!-- <a href="/component?page=<%= crr_page+1%>"><div class="pagenumber"><%= crr_page +1%></div></a>
                                    <a href="/component?page=<%= crr_page+2%>"><div class="pagenumber"><%= crr_page +2%></div></a> -->
                                    <a href="task9/search?page=<%= crr_page + 1%>">></a>
                                  
                           <% } %>
                                                   
           
                                <a href="task9/search?page=<%= last_page %>">>></a>
           
                    </div>
           </div>
         
            <%}%>
             
       
       
</body>
<script>
function studentiddisplay()
{
    document.getElementById("searchstudentid").focus();
}
function Searchmore()
{
    var viewmore = document.getElementById("moresearch");
    if(viewmore.style.display != 'none')
    {
        viewmore.style.display = 'none';
    }
    else
    {
        viewmore.style.display = 'block'; 
    }
}
</script>
</html>